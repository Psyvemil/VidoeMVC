@model VideoUploadVM

@{
    Layout = "_Layout1";
    ViewData["Title"] = "Upload Video";
}


<h2>Create Video</h2>

<form asp-action="Create" asp-controller="VideoUpload" method="post" enctype="multipart/form-data">
    <div class="container-fluid upload-details" id="content-wrapper">
        <h4>Video</h4>
        <hr />

        <div class="form-group">
            <label for="Title" class="control-label col-md-2">Title</label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="Description" class="control-label col-md-2">Description</label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="VideoFile" class="control-label col-md-2">Video File</label>
            <div class="col-md-10">
                <input asp-for="Video" type="file" class="form-control" />
                <span class="text-danger" asp-validation-for="Video"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="ThumbnailFile" class="control-label col-md-2">Thumbnail File</label>
            <div class="col-md-10">
                <input asp-for="Tumbnail" type="file" class="form-control" />
                <span class="text-danger" asp-validation-for="Tumbnail"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Privacy" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Privacy" class="form-control">
                    @if (ViewBag.PrivacyOptions != null)
                    {
                        @foreach (var option in ViewBag.PrivacyOptions)
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    }
                </select>
                <span class="text-danger" asp-validation-for="Privacy"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="Language" class="control-label col-md-2">Language</label>
            <div class="col-md-10">
                <select asp-for="Language" class="form-control">
                    @if (ViewBag.Languages != null)
                    {
                        @foreach (var language in ViewBag.Languages)
                        {
                            <option value="@language.Value">@language.Text</option>
                        }
                    }
                </select>
                <span class="text-danger" asp-validation-for="Language"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="CategoryIds" class="control-label col-md-2">Categories</label>
            <div class="col-md-10">
                <select asp-for="CategoriesIDs" class="form-control" multiple>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="CategoriesIDs"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="Tags" class="control-label col-md-2">Tags</label>
            <div class="col-md-10">
                <input asp-for="Tags" class="form-control" placeholder="Enter tags separated by commas" />
                <span class="text-danger" asp-validation-for="Tags"></span>
            </div>
        </div>

        <div class="form-group">
            <label for="CastIds" class="control-label col-md-2">Cast Members</label>
            <div class="col-md-10">
                <select asp-for="CastIDs" class="form-control select2" multiple>
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.Id">@user.UserName</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="CastIDs"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


